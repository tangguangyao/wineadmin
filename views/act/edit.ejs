<%- include ../header %>
<div class="col-md-10">
    <form action="actedit?uid=<%= info.uid%>" class="form-horizontal" role="form" method="post" enctype="multipart/form-data" style="margin-top:20px;">
      <div>
        <h4>标题</h4>
        <input type="text" class="form-control" name="title" value="<%= info.title%>">
      </div>
      <div>
        <h4>重新插入图片</h4>
        <input type='file' name='pic' />
        <h4>内容</h4>
        <textarea class="form-control" rows="10" name="com" ><%= info.com%></textarea>
      </div>
      <button type="submit" class="btn btn-default">提交</button>
    </form>
</div>

<%- include ../footer %>